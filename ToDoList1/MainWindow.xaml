<Window x:Class="ToDoList1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstBoxTasks" Margin="0,17,0,60" HorizontalAlignment="Center" Width="739">
            

        </ListBox>

        <Button x:Name="btnAddTask" Height="40" Width="40" Margin="380,374,380,20" Click="btnAddTask_Click" >
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Fill="#FFADE6B0" Stroke="#FF00FF27" StrokeThickness="2"/>
                        <Label Content="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Height="40"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
            <Button.ToolTip>
                <ToolTip Content="Add Task"/>
            </Button.ToolTip>

        </Button>
    </Grid>
</Window>
